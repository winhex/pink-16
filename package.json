{
  "name": "pink",
  "version": "16.0.0",
  "private": true,
  "description": "Личный проект «Pink» от HTML Academy",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.5.x",
    "browser-sync": "^2.26.7",
    "deep-extend": ">=0.5.1",
    "gulp": "^4.0.2",
    "gulp-csso": "^3.0.1",
    "gulp-imagemin": "^6.2.0",
    "gulp-less": "^4.0.1",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "^2.6.5",
